{
    "name": "phant/cache",
    "description": "Manage cache easily",
    "license": "MIT",
    "keywords": ["cache manager", "cache component", "SimpleCache", "cache PSR-16", "cache component PSR-16"],
    "authors": [
        {
            "name": "Lenny ROUANET",
            "email": "lennyrouanet@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/cache": "5.*",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4"
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse component --memory-limit=4G"
    },
    "autoload": {
        "psr-4": {
            "Phant\\Cache\\": "component/"
        }
    }
}
